{
  "name": "dunder-mifflin",
  "private": true,
  "packageManager": "pnpm@10.4.0",
  "scripts": {
    "dev:portal": "pnpm --filter @dunder/portal dev",
    "build:portal": "pnpm --filter @dunder/portal build",
    "test:portal": "pnpm --filter @dunder/portal test",
    "dev:infinity": "pnpm --filter @dunder/infinity dev",
    "build:infinity": "pnpm --filter @dunder/infinity build",
    "test:infinity": "pnpm --filter @dunder/infinity test",
    "dev:accounting": "pnpm --filter @dunder/accounting dev",
    "build:accounting": "pnpm --filter @dunder/accounting build",
    "test:accounting": "pnpm --filter @dunder/accounting test",
    "dev:wuphf-widget": "pnpm --filter @dunder/wuphf-widget dev",
    "build:wuphf-widget": "pnpm --filter @dunder/wuphf-widget build",
    "test:wuphf-widget": "pnpm --filter @dunder/wuphf-widget test",
    "test:e2e:pr2": "playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/auth-sales-navigation.spec.ts",
    "test:e2e:pr3": "playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/sales-order-placement.spec.ts",
    "test:e2e:pr4": "playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/warehouse-dispatch.spec.ts",
    "test:e2e:pr5": "playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/sales-order-timeline.spec.ts",
    "test:e2e:pr6": "playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/accounting-expense-decision.spec.ts",
    "test:e2e:pr7": "playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/wuphf-notification-widget.spec.ts",
    "test:e2e:pr8": "playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/warehouse-offline-sync.spec.ts",
    "test:e2e:pr9": "playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/reliability-error-state.spec.ts",
    "test:e2e:golden": "playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/auth-sales-navigation.spec.ts tests/e2e/specs/sales-order-placement.spec.ts tests/e2e/specs/warehouse-dispatch.spec.ts tests/e2e/specs/warehouse-offline-sync.spec.ts tests/e2e/specs/sales-order-timeline.spec.ts tests/e2e/specs/accounting-expense-decision.spec.ts tests/e2e/specs/wuphf-notification-widget.spec.ts tests/e2e/specs/reliability-error-state.spec.ts",
    "test:e2e:golden:report": "PLAYWRIGHT_JSON_OUTPUT_DIR=test-results PLAYWRIGHT_JSON_OUTPUT_NAME=playwright-results.json PLAYWRIGHT_JUNIT_OUTPUT_DIR=test-results PLAYWRIGHT_JUNIT_OUTPUT_NAME=playwright-junit.xml playwright test --config tests/e2e/config/playwright.config.ts tests/e2e/specs/auth-sales-navigation.spec.ts tests/e2e/specs/sales-order-placement.spec.ts tests/e2e/specs/warehouse-dispatch.spec.ts tests/e2e/specs/warehouse-offline-sync.spec.ts tests/e2e/specs/sales-order-timeline.spec.ts tests/e2e/specs/accounting-expense-decision.spec.ts tests/e2e/specs/wuphf-notification-widget.spec.ts tests/e2e/specs/reliability-error-state.spec.ts --reporter=list,json,junit",
    "test:e2e:smoke": "pnpm test:e2e:golden",
    "test:e2e:flake-check": "node tests/e2e/scripts/check-flake-rate.mjs",
    "test:e2e:gate": "pnpm test:e2e:golden:report && pnpm test:e2e:flake-check"
  },
  "devDependencies": {
    "@playwright/test": "1.51.1"
  }
}
